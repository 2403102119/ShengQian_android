<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_title"></include>
    <View style="@style/hengLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal"
        android:weightSum="7">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/touxiang5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="店铺名称店铺名称店铺名称店铺名称店铺名称店铺名称"
                    android:textColor="#111"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sp_35"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:drawableRight="@drawable/back"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="店铺名称"
                        android:textColor="#111"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="@dimen/sp_15"
                        android:layout_height="@dimen/sp_15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:src="@drawable/touxiang5"

                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="商家介绍 >"
            android:textColor="#FF1717"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <include layout="@layout/item_fujinshopdetail_youhuiquan"/>
            <include layout="@layout/item_fujinshopdetail_youhuiquan"/>
            <include layout="@layout/item_fujinshopdetail_youhuiquan"/>
            <include layout="@layout/item_fujinshopdetail_youhuiquan"/>
            <include layout="@layout/item_fujinshopdetail_youhuiquan"/>
            <include layout="@layout/item_fujinshopdetail_youhuiquan"/>
            <include layout="@layout/item_fujinshopdetail_youhuiquan"/>
            <include layout="@layout/item_fujinshopdetail_youhuiquan"/>
            <include layout="@layout/item_fujinshopdetail_youhuiquan"/>
            <include layout="@layout/item_fujinshopdetail_youhuiquan"/>


        </LinearLayout>

    </ScrollView>




</LinearLayout>