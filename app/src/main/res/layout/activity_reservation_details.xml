<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.lx.whsq.liactivity.Reservation_detailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/perch"
                    android:layout_width="105dp"
                    android:layout_height="105dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="中州商务酒店"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:text="传统大床房"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text="06-18 至 06-19 共2晚 不含早"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/dp_15"
                android:orientation="vertical"
                android:background="@drawable/biankuang4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="房间数："
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:background="@drawable/biankuang12"
                        android:layout_marginLeft="@dimen/dp_44"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="30dp">
                        <TextView
                            android:text="2 间"
                            android:paddingLeft="15dp"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="30dp" />
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/fanhui"
                            android:layout_width="6dp"
                            android:layout_height="11dp" />
                    </LinearLayout>
                   
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="入住人："
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/im_gantan"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/search"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />
                    <EditText
                        android:background="@drawable/biankuang12"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:textSize="13sp"
                        android:textColor="#333333"
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="入住人："
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:background="@drawable/biankuang12"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:textSize="13sp"
                        android:textColor="#333333"
                        android:layout_marginLeft="@dimen/dp_44"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="入住人："
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:background="@drawable/biankuang12"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:textSize="13sp"
                        android:textColor="#333333"
                        android:layout_marginLeft="@dimen/dp_44"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="联系电话："
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:background="@drawable/biankuang12"
                        android:text="2 间"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:textSize="13sp"
                        android:textColor="#333333"
                        android:layout_marginLeft="28dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="发票"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="如需发票请向酒店索取"
                        android:textSize="13sp"
                        android:textColor="#333333"
                        android:layout_marginLeft="69dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="预定须知："
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:text="取消规则：一经预定成功不可变更/取消"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:text="入住时间：9:00以后"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:text="离店时间：12:00以前"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
   <LinearLayout
       android:background="@color/white"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:paddingLeft="14dp"
       android:layout_alignParentBottom="true"
       android:layout_width="match_parent"
       android:layout_height="49dp">
      <TextView
          android:text="在线付："
          android:textSize="15sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
       <TextView
          android:text="￥280"
          android:textSize="15sp"
           android:textColor="#DE2910"
          android:layout_width="0dp"
           android:layout_weight="1"
          android:layout_height="wrap_content" />
       <TextView
           android:text="立即支付"
           android:textColor="@color/white"
           android:textSize="15sp"
           android:gravity="center"
           android:background="#DE2910"
           android:layout_width="120dp"
           android:layout_height="match_parent" />
   </LinearLayout>
   
</RelativeLayout>
