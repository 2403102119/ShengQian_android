<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:background="@drawable/biankuang4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="订单编号：2019052501221"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="#CCCCCC"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/ll_voucher_details"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="￥30"
            android:layout_marginLeft="19dp"
            android:textColor="@color/red_them"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:text="100元代金券"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="有效期至：2019-05-30"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="22dp"
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <TextView
            android:text="核销"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/red_them"
            android:background="@drawable/biankuang7"
            android:layout_width="78dp"
            android:layout_height="29dp" />

    </LinearLayout>
</LinearLayout>