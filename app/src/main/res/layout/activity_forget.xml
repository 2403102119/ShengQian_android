<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context="com.lx.whsq.liactivity.ForgetActivity">
    <EditText
        android:visibility="gone"
        android:id="@+id/et_a"
        android:layout_marginTop="10dp"
        android:textColorHint="#999999"
        android:textSize="14sp"
        android:hint="请输入旧手机号"
        android:background="@null"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <View
        android:visibility="gone"
        android:id="@+id/v_a"
        android:layout_marginTop="15dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:visibility="gone"
        android:id="@+id/et_b"
        android:layout_marginTop="10dp"
        android:textColorHint="#999999"
        android:textSize="14sp"
        android:hint="请输入新手机号"
        android:background="@null"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <View
        android:visibility="gone"
        android:id="@+id/v_b"
        android:layout_marginTop="15dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



    <EditText
        android:id="@+id/ed_c"
        android:layout_marginTop="25dp"
        android:textColorHint="#999999"
        android:textSize="14sp"
        android:hint="请输入手机号码"
        android:background="@null"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <View
        android:id="@+id/v_c"
        android:layout_marginTop="15dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:hint="请输入手机验证码"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />
        <View
            android:layout_gravity="center_vertical"
            android:background="#E6E6E6"
            android:layout_width="1dp"
            android:layout_height="20dp"/>
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"
            android:text="获取验证码"
            android:textColor="#F14547"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginTop="15dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/rd_password"
        android:layout_marginTop="10dp"
        android:textColorHint="#999999"
        android:textSize="14sp"
        android:hint="请设置密码"
        android:background="@null"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <View
        android:id="@+id/ve_rd_password"
        android:layout_marginTop="15dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/rd_password_1"
        android:layout_marginTop="10dp"
        android:textColorHint="#999999"
        android:textSize="14sp"
        android:hint="请再次输入密码"
        android:background="@null"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <View
        android:id="@+id/ve_rd_password_1"
        android:layout_marginTop="15dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_submit"
        android:text="提交"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@drawable/biankuang3"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="287dp"
        android:layout_height="44dp" />
</LinearLayout>
