<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.lx.whsq.liactivity.HotelActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/biankuang"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:id="@+id/tv_te_city"
                android:text="郑州市金水区通泰路"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/fanhui"
                android:layout_width="6dp"
                android:layout_height="10dp" />
            <View
                android:layout_marginLeft="11dp"
                android:background="#000000"
                android:layout_width="1dp"
                android:layout_height="15dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="当前位置"
                android:textSize="11sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@drawable/perch"
                android:layout_width="14dp"
                android:layout_height="14dp" />
        </LinearLayout>
        <View
            android:background="#F9F9F9"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:src="@drawable/perch"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="入住时间"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="8月06日"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_marginLeft="53dp"
                android:src="@drawable/perch"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_marginLeft="53dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="入住时间"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="8月06日"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:src="@drawable/perch"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <View
            android:background="#F9F9F9"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="33dp">
            <ImageView
                android:src="@mipmap/search"
                android:layout_width="13dp"
                android:layout_height="13dp" />
            <EditText
                android:id="@+id/ed_hotel"
                android:layout_marginLeft="10dp"
                android:hint="请输入位置、品牌、酒店名"
                android:textSize="12sp"
                android:textColor="#333333"
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="33dp" />
        </LinearLayout>
        <View
            android:background="#F9F9F9"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp">
            <ImageView
                android:src="@drawable/perch"
                android:layout_width="13dp"
                android:layout_height="13dp" />
            <TextView
                android:text="星级"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="不限"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="11dp"
                android:src="@mipmap/fanhui"
                android:layout_width="6dp"
                android:layout_height="10dp" />
        </LinearLayout>
        <View
            android:background="#F9F9F9"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp">
            <ImageView
                android:src="@drawable/perch"
                android:layout_width="13dp"
                android:layout_height="13dp" />
            <TextView
                android:text="价格"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="不限"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="11dp"
                android:src="@mipmap/fanhui"
                android:layout_width="6dp"
                android:layout_height="10dp" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:text="查询"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/red_them"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="43dp">
    </TextView>

</RelativeLayout>
