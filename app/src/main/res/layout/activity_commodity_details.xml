<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.lx.whsq.liactivity.Commodity_detailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </com.youth.banner.Banner>

                <LinearLayout
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="158dp">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="劵后价 "
                            android:textSize="15sp"
                            android:textColor="#FF0F0F"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="￥"
                            android:textSize="15sp"
                            android:textColor="#FF0F0F"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="14.59"
                            android:textSize="25sp"
                            android:textColor="#FF0F0F"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="17.5铜板"
                            android:textColor="@color/red_them"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:background="@drawable/biankuang11"
                            android:layout_width="77dp"
                            android:layout_height="16dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="原价 "
                            android:textSize="12sp"
                            android:textColor="#AAAAAA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="￥80.0"
                            android:textSize="12sp"
                            android:textColor="#AAAAAA"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="已售:200"
                            android:textSize="12sp"
                            android:textColor="#AAAAAA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="TK2005  韩束【大分量补水神奇】韩束保湿晒后修复补水面膜"
                            android:layout_width="0dp"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_weight="1"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:src="@drawable/perch"
                            android:layout_width="55dp"
                            android:layout_height="22dp" />
                    </LinearLayout>
                    <TextView
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:text="副标题副标题副标题副标题副标题"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#F8F8F8"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <LinearLayout
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="47dp">
                    <TextView
                        android:text="包邮(部分偏远地区除外) · 正品保障 · 七天无理由退货 · 发票"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:singleLine="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text=">"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#F8F8F8"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <LinearLayout
                    android:id="@+id/ll_select_specification"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="47dp">
                    <TextView
                        android:text="请选择商品规格"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:singleLine="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text=">"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#F8F8F8"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <LinearLayout
                    android:id="@+id/ll_evaluate"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="47dp">
                    <TextView
                        android:text="用户评价（20）"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:singleLine="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="更多评价 >"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/re_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
                <View
                    android:background="#F8F8F8"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <LinearLayout
                    android:id="@+id/ll_store"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="66dp">
                    <ImageView
                        android:src="@drawable/perch"
                        android:layout_width="29dp"
                        android:layout_height="29dp" />
                    <TextView
                        android:text="店铺名称"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="进入店铺 >"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:background="#F8F8F8"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <LinearLayout
                    android:id="@+id/ll_product_detail"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <TextView
                        android:text="商品详情"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:singleLine="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/perch"
                    app:riv_border_width="0dip"
                    app:riv_corner_radius_top_left="@dimen/dp_5"
                    app:riv_corner_radius_top_right="@dimen/dp_5"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#F8F8F8"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <View
                        android:background="#F32009"
                        android:layout_marginRight="18dp"
                        android:layout_width="40dp"
                        android:layout_height="1dp"/>
                    <ImageView
                        android:src="@drawable/perch"
                        android:layout_width="10dp"
                        android:layout_height="9dp" />
                    <TextView
                        android:layout_marginLeft="4dp"
                        android:text="猜你喜欢"
                        android:textSize="15sp"
                        android:textColor="#F32009"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:background="#F32009"
                        android:layout_marginLeft="18dp"
                        android:layout_width="40dp"
                        android:layout_height="1dp"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/re_2"
                    android:background="#F8F8F8"
                    android:layout_marginBottom="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </ScrollView>
        <ImageView
            android:id="@+id/im_return"
            android:src="@drawable/perch"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <LinearLayout
            android:id="@+id/ll_on"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <RadioGroup
                android:id="@+id/Homerg02"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/RadioButton1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@drawable/home_s1"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:text="首页"
                    android:textColor="#FF7500"
                    android:textSize="11sp" />

                <RadioButton
                    android:id="@+id/RadioButton2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/home_s4"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:text="购物车"
                    android:textColor="#6B6B6B"
                    android:textSize="11sp" />

                <RadioButton
                    android:id="@+id/RadioButton3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/home_s1"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:text="客服"
                    android:textColor="#6B6B6B"
                    android:textSize="11sp" />

                <RadioButton
                    android:id="@+id/RadioButton4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/home_s4"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:text="电话"
                    android:textColor="#6B6B6B"
                    android:textSize="11sp" />
            </RadioGroup>
            <TextView
                android:background="@drawable/biankuang13"
                android:text="加入购物车"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="110dp"
                android:layout_height="match_parent" />
            <TextView
                android:background="@drawable/biankuang14"
                android:text="立即购买"
                android:layout_marginRight="11dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="110dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
