<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lx.whsq.liactivity.Product_detailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/perch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/perch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/perch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/perch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/perch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <RadioGroup
            android:id="@+id/Homerg02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RadioButton1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:layout_marginLeft="20dp"
                android:checked="true"
                android:drawableTop="@drawable/home_s1"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="首页"
                android:textColor="#FF7500"
                android:textSize="11sp" />

            <RadioButton
                android:id="@+id/RadioButton2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:paddingTop="2dp"
                android:textColor="#6B6B6B"
                android:textSize="11sp" />

            <RadioButton
                android:id="@+id/RadioButton3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:paddingTop="2dp"
                android:textColor="#6B6B6B"
                android:textSize="11sp" />

            <RadioButton
                android:id="@+id/RadioButton4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:paddingTop="2dp"
                android:textColor="#6B6B6B"
                android:textSize="11sp" />
        </RadioGroup>
        <TextView
            android:background="@drawable/biankuang13"
            android:text="分享"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_width="93dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="@drawable/biankuang14"
            android:text="￥20 领劵购买"
            android:layout_marginRight="11dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="128dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>
