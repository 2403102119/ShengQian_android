<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_15"
    android:background="@color/white"
    tools:context="com.lx.whsq.liactivity.ApplyActivity">
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="195dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_gravity="center_vertical"
                android:background="#F10909"
                android:layout_width="3dp"
                android:layout_height="9dp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:text="填写身份信息"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            android:background="#EEEEEE"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="申请人："
                android:textSize="13sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textCursorDrawable="@drawable/my_cursor2"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#E6E6E6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="电话号："
                android:textSize="13sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textCursorDrawable="@drawable/my_cursor2"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="#E6E6E6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="验证码："
                android:textSize="13sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textCursorDrawable="@drawable/my_cursor2"
                        android:textSize="13sp"
                        android:textColor="#333333"
                        android:background="@null"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="获取验证码"
                        android:textColor="#EB2E2E"
                        android:textSize="11dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:background="#E6E6E6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:text="去银行官网申请"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:background="@drawable/biankuang16"
        android:layout_width="match_parent"
        android:layout_height="33dp" />
    <TextView
        android:layout_marginTop="15dp"
        android:textSize="11sp"
        android:textColor="#666666"
        android:lineSpacingExtra="5dp"
        android:text="填写开卡人信息后前往银行官网进行申请所填信息与官网申请时填写的保持一致便可以得到预估收益"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
